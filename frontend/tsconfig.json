{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@backend/*": [
                "../backend/*"
            ],
            "@frontend/*": [
                "./*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "../backend/**/*.ts",
        "../types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}